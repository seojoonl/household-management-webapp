DROP DATABASE IF EXISTS HouseHelper;
CREATE DATABASE HouseHelper;
USE HouseHelper;

    
CREATE TABLE Households (
    HID INT(11) PRIMARY KEY NOT NULL AUTO_INCREMENT,
    HouseholdName VARCHAR(50) NOT NULL
);

CREATE TABLE Users (
    UID INT(11) PRIMARY KEY NOT NULL AUTO_INCREMENT,
    Username VARCHAR(50) NOT NULL,
    Name VARCHAR(50) NOT NULL,
    Password VARCHAR(50) NOT NULL,
    HID INT(11) DEFAULT NULL,
    FOREIGN KEY (HID) REFERENCES Households(HID)
);

CREATE TABLE Tasks (
    TID INT(11) PRIMARY KEY NOT NULL AUTO_INCREMENT,
    HID INT(11) NOT NULL,
    UID INT(11) DEFAULT NULL,
    Completed BOOLEAN NOT NULL DEFAULT FALSE,
    TaskName VARCHAR(50) NOT NULL,
    FOREIGN KEY (HID) REFERENCES Households(HID),
    FOREIGN KEY (UID) REFERENCES Users(UID)
);